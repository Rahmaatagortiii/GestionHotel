{% extends 'base-front.html.twig' %}

{% block title %}List Hotel{% endblock %}

{% block body %}
        </header>

        <h1>Hotel </h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nbre_etoiles</th>
                <th>Adresse</th>
                <th>Prix_par_chambre</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for hotel in hotels %}
                <tr>
                    <td>{{ hotel.id }}</td>
                    <td>{{ hotel.nom }}</td>
                    <td>{{ hotel.nbreEtoiles }}</td>
                    <td>{{ hotel.adresse }}</td>
                    <td>{{ hotel.prixParChambre }}</td>
                    <td>
                        <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}">show</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}