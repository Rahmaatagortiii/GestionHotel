{% extends 'base.html.twig' %}

{% block title %}List Hotel{% endblock %}

{% block body %}
    <div class="dash">
    <div class="dash-nav dash-nav-dark">
        <header>
            <a href="#!" class="menu-toggle">
                <i class="fas fa-bars"></i>
            </a>
            <a href="index.html" class="spur-logo"><i class="fas fa-bolt"></i> <span>SkyTravel</span></a>
        </header>

        <nav class="dash-nav-list">
            <a href="usersA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Users </a>
            <a href="hotelsA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Hotels </a>
            <a href="VolA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Vols </a>
            <a href="evenementsA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Evenements </a>
            <a href="restaurantsA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Restaurants </a>
            <a href="excursionsA.html" class="dash-nav-item">
                <i class="fas fa-home"></i> Excursions </a>


            <div class="dash-nav-dropdown">
                <a href="#!" class="dash-nav-item dash-nav-dropdown-toggle">
                    <i class="fas fa-info"></i> About </a>
                <div class="dash-nav-dropdown-menu">
                    <a href="https://github.com/rihab-gif/Tech-Plus-Web" target="_blank" class="dash-nav-dropdown-item">GitHub</a>
                </div>
            </div>
        </nav>
    </div>
    <div class="dash-app">
        <header class="dash-toolbar">
            <a href="#!" class="menu-toggle">
                <i class="fas fa-bars"></i>
            </a>
            <a href="#!" class="searchbox-toggle">
                <i class="fas fa-search"></i>
            </a>
            <form class="searchbox" action="#!">
                <a href="#!" class="searchbox-toggle"> <i class="fas fa-arrow-left"></i> </a>
                <button type="submit" class="searchbox-submit"> <i class="fas fa-search"></i> </button>
                <input type="text" class="searchbox-input" placeholder="type to search">
            </form>
            <div class="tools">
                <a href="https://github.com/rihab-gif/Tech-Plus-Web" target="_blank" class="tools-item">
                    <i class="fab fa-github"></i>
                </a>
                <a href="#!" class="tools-item">
                    <i class="fas fa-bell"></i>
                    <i class="tools-item-count">4</i>
                </a>
                <div class="dropdown tools-item">
                    <a href="#" class="" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu1">
                        <a class="dropdown-item" href="#!">Profile</a>
                        <a class="dropdown-item" href="login.html">Logout</a>
                    </div>
                </div>
            </div>
        </header>

        <h1>Hotel </h1>

        <table class="table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Nbre_etoiles</th>
                <th>Adresse</th>
                <th>Prix_par_chambre</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for hotel in hotels %}
                <tr>
                    <td>{{ hotel.id }}</td>
                    <td>{{ hotel.nom }}</td>
                    <td>{{ hotel.nbreEtoiles }}</td>
                    <td>{{ hotel.adresse }}</td>
                    <td>{{ hotel.prixParChambre }}</td>
                    <td>
                        <a href="{{ path('app_hotel_show', {'id': hotel.id}) }}">show</a>
                        <a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_hotel_new') }}">Create new</a>
    </div>

{% endblock %}